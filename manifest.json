{
  "manifest_version": 3,
  "name": "LinkedIn Post Formatter",
  "version": "1.0.0",
  "description": "Format your LinkedIn posts with bold, italic, bullets, and emojis. No account needed.",
  "permissions": [],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
